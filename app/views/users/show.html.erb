<h1>Hi, <%= @user.username %>!</h1>

<%= link_to "New Task", new_user_task_path(@user) %>

<div>
    <% if @user.tasks.blank? %>
        <p>You don't have any tasks right now. Enjoy!</p>
    <% else %>
        <h4>Here are your tasks:</h4>

        <% @user.tasks.each do |task| %>
            <%= link_to task.name, user_task_path(task.user, task) %><br/>
        <% end %>
    <% end %>
</div>

<div>
    <%= link_to "Log Out", logout_path, method: :delete %>
</div>

<div>
    <%= button_to "Delete Profile", user_path(@user), method: :delete, confirm: "Are you sure?" %>
</div>