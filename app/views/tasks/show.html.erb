<h2><%= @task.project_title %></h2>

<h3><%= @task.name %></h3>
<p><%= @task.description %></p><br/>

<p>Assigned To: <%= @task.user_username %></p>

<div>Status: <%= @task.status %></div>

<% if @task.user %>
    <%= link_to "Edit Task", edit_user_task_path(@task.user, @task) %><br/>
<% else %>
    <%= link_to "Edit Task", edit_task_path(@task) %><br/>
<% end %>

<%= link_to "Delete", task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %>