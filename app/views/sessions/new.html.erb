<h2>Log In:</h2>

<% flash.each do |type, msg| %>
    <div>
        <%= msg %>
    </div>
<% end %>

<%= form_tag '/login' do %>

    <div>
        <%= label_tag "Username: " %>
        <%= text_field_tag :username %>
    </div>

    <div>
        <%= label_tag "Your Password: " %>
        <%= password_field_tag :password %>
    </div>

    <div>
        <%= submit_tag "Log in" %>
    </div>

<% end %> 